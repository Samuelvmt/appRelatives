<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPrimeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeiro"
        android:textColor="#49041A"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_toRightOf="@+id/txtPrimeiro"
        android:id="@+id/txtSegundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo"
        android:textColor="#05AA62"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/txtPrimeiro"
        android:id="@+id/txtTerceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terceiro"
        android:textColor="#3FB600"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/txtPrimeiro"
        android:layout_toRightOf="@id/txtTerceiro"
        android:id="@+id/txtQuarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quarto"
        android:textColor="#000B08"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>